// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bathrooms Int
  number_of_bedrooms  Int
  city                String
  price               Float
  images              Image[]
  land_size           Float
  listed_date         DateTime     @default(now())
  property_type       PropertyType
  realtor_id          Int
  realtor             User         @relation(fields: [realtor_id], references: [id])
  messages            Message[]
  created_at          DateTime     @default(now())
  updated_at          DateTime     @updatedAt
  deleted             Boolean      @default(false)
}

enum PropertyType {
  RESIDENTIAL
  CONDO
}

model Image {
  id         Int      @id @default(autoincrement())
  uri        String
  home_id    Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted    Boolean  @default(false)
  home       Home     @relation(fields: [home_id], references: [id])
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  phone            String
  password         String
  user_type        UserType
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  homes            Home[]
  buyer_messages   Message[] @relation("buyer_messages")
  realtor_messages Message[] @relation("realtor_messages")
  deleted          Boolean   @default(false)
}

enum UserType {
  ADMIN
  BUYER
  REALTOR
}

model Message {
  id         Int      @id @default(autoincrement())
  message    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted    Boolean  @default(false)
  home_id    Int
  home       Home     @relation(fields: [home_id], references: [id])
  buyer_id   Int
  buyer      User     @relation("buyer_messages", fields: [buyer_id], references: [id])
  realtor_id Int
  realtor    User     @relation("realtor_messages", fields: [realtor_id], references: [id])
}
